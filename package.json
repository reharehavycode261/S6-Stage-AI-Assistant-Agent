{
  "name": "ai-agent",
  "version": "1.0.0",
  "description": "Agent d'Automatisation IA avec LangGraph et Monday.com",
  "main": "main.py",
  "scripts": {
    "start": "cd backend && python3 main.py",
    "test": "cd backend && python3 -m pytest tests/",
    "test:simple": "cd backend && python3 tests/test_simple_validation.py",
    "lint": "cd backend && flake8 .",
    "format": "cd backend && black .",
    "dev": "cd backend && python3 main.py --dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose build --no-cache"
  },
  "keywords": [
    "ai",
    "automation",
    "langgraph",
    "monday.com",
    "workflow",
    "python"
  ],
  "author": "Smartelia <contact@smartelia.fr>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartelia/ai-agent.git"
  },
  "bugs": {
    "url": "https://github.com/smartelia/ai-agent/issues"
  },
  "homepage": "https://github.com/smartelia/ai-agent#readme",
  "engines": {
    "python": ">=3.8"
  },
  "dependencies": {
    "chrome-devtools-mcp": "^0.10.1"
  },
  "directories": {
    "test": "backend/tests",
    "doc": "docs"
  },
  "config": {
    "python_version": "3.12",
    "test_framework": "pytest"
  }
}
